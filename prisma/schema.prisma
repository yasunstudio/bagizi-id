// ============================================================================
// Model: BeneficiaryOrganization
// ============================================================================
// Purpose: Universal model for ALL beneficiary organizations in MBG program
// Supports: Schools, Health Facilities, Posyandu, Community Centers, etc.
// Replaces: School model (for enrollment purposes)

model BeneficiaryOrganization {
  id     String @id @default(cuid())
  sppgId String

  // Organization Identity
  organizationName String                          @db.VarChar(255)
  organizationCode String                          @unique @db.VarChar(50)
  type             BeneficiaryOrganizationType
  subType          BeneficiaryOrganizationSubType?

  // Location (Required for all types) - Using proper foreign keys (hierarchical order)
  address     String  @db.Text
  provinceId  String  // Provinsi ID (Required - Level 1)
  regencyId   String  // Kabupaten/Kota ID (Required - Level 2)
  districtId  String? // Kecamatan ID (Optional - Level 3)
  villageId   String? // Kelurahan/Desa ID (Optional - Level 4)
  postalCode  String? @db.VarChar(10)
  latitude    Float?
  longitude   Float?

  // Contact Information
  phone         String? @db.VarChar(20)
  email         String? @db.VarChar(255)
  contactPerson String? @db.VarChar(255)
  contactTitle  String? @db.VarChar(100)

  // Type-Specific Identifiers (conditional usage)
  npsn               String? @unique @db.VarChar(20) // For schools only (Nomor Pokok Sekolah Nasional)
  nikkes             String? @unique @db.VarChar(30) // For health facilities (NIK Kesehatan)
  registrationNumber String? @db.VarChar(50) // For other organization types

  // Principal/Head Information (mainly for schools)
  principalName String? @db.VarChar(255)
  principalNip  String? @db.VarChar(30)

  // Ownership Status (using enum for type safety)
  ownershipStatus OrganizationOwnershipStatus?

  // Staff/Personnel Counts (applies to all organization types)
  teachingStaffCount    Int? // Jumlah Guru/Tenaga Pengajar/Kader (for Schools/Health/Posyandu)
  nonTeachingStaffCount Int? // Jumlah Tendik/Tenaga Non-Pengajar (for Schools/Health facilities)
  establishedYear       Int? // Year organization was established

  // Operational Status
  operationalStatus String  @default("ACTIVE") @db.VarChar(20) // ACTIVE, INACTIVE, TEMPORARILY_CLOSED
  isActive          Boolean @default(true)

  // Additional Information
  notes String? @db.Text

  // Relations (hierarchical order matching location cascade)
  sppg        SPPG                           @relation(fields: [sppgId], references: [id], onDelete: Cascade)
  province    Province                       @relation(fields: [provinceId], references: [id], onDelete: Restrict)
  regency     Regency                        @relation(fields: [regencyId], references: [id], onDelete: Restrict)
  district    District?                      @relation(fields: [districtId], references: [id], onDelete: Restrict)
  village     Village?                       @relation(fields: [villageId], references: [id], onDelete: Restrict)
  enrollments ProgramBeneficiaryEnrollment[]

  // PHASE 3: New Relations
  distributions FoodDistribution[] // ✅ NEW (Phase 3): Food distributions to this organization

  // Future: Can add more relations as needed
  // feedbacks     BeneficiaryFeedback[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?
  updatedBy String?

  @@index([sppgId])
  @@index([type, subType])
  @@index([provinceId, regencyId])
  @@index([operationalStatus])
  @@map("beneficiary_organizations")
}


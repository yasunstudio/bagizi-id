  // Performance Tracking (universal)
  totalMealsServed         Int?      @default(0)
  totalBeneficiariesServed Int?      @default(0)
  averageAttendanceRate    Float? // Percentage
  lastDistributionDate     DateTime?
  lastMonitoringDate       DateTime?

  // Quality Metrics (universal)
  satisfactionScore       Float? // Average satisfaction (1-5 scale)
  complaintCount          Int?   @default(0)
  nutritionComplianceRate Float? // Percentage

  // Special Requirements (type-specific, optional)
  specialDietaryNeeds   String? @db.Text // JSON or comma-separated
  allergenRestrictions  String? @db.Text // JSON or comma-separated
  culturalPreferences   String? @db.Text // e.g., Halal, Vegetarian
  medicalConsiderations String? @db.Text // For pregnant women, elderly, etc.

  // Program-Specific Configuration (for specialized programs)
  programFocus          String? @db.VarChar(100) // e.g., "Stunting Prevention", "Maternal Health"
  supplementaryServices String? @db.Text // Additional services provided (JSON)

  // Status & Flags
  enrollmentStatus ProgramEnrollmentStatus @default(ACTIVE)
  isActive         Boolean                 @default(true)
  isPriority       Boolean                 @default(false) // Priority beneficiaries
  needsAssessment  Boolean                 @default(false) // Requires nutritional assessment

  // Administrative
  enrolledBy    String? // User ID who enrolled
  approvedBy    String? // User ID who approved (if applicable)
  approvedAt    DateTime?
  remarks       String?   @db.Text
  internalNotes String?   @db.Text

  // Relations
  beneficiaryOrg BeneficiaryOrganization @relation(fields: [beneficiaryOrgId], references: [id], onDelete: Cascade)
  program        NutritionProgram        @relation("ProgramBeneficiaryEnrollments", fields: [programId], references: [id], onDelete: Cascade)
  sppg           SPPG                    @relation(fields: [sppgId], references: [id], onDelete: Cascade)

  // PHASE 3: New Relations
  distributions FoodDistribution[] // ✅ NEW (Phase 3): Food distributions for this enrollment

  // Future relations (to be added as features are implemented)
  // monitoringRecords ProgramMonitoring[]
  // assessments       NutritionalAssessment[]
  // feedbacks         BeneficiaryFeedback[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([beneficiaryOrgId, programId, targetGroup], name: "unique_enrollment_per_target")
  @@index([beneficiaryOrgId])
  @@index([programId])
  @@index([sppgId])
  @@index([targetGroup])
  @@index([enrollmentStatus])
  @@index([startDate, endDate])
  @@map("program_beneficiary_enrollments")
}
